<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_act_feed">

    <fragment
        android:id="@+id/nav_act_feed"
        android:name="com.dat257.team1.LFG.view.activityFeed.ActFeedPageFragment"
        tools:layout="@layout/activity_feed_w_tabs"/>

    <fragment
        android:id="@+id/nav_my_activities"
        android:name="com.dat257.team1.LFG.view.myActivities.MyActPageFragment"
        tools:layout="@layout/my_activities_page"/>

    <fragment
        android:id="@+id/nav_about"
        android:name="com.dat257.team1.LFG.view.AboutFragment" />
    <activity
        android:id="@+id/nav_profileView"
        android:name="com.dat257.team1.LFG.view.ProfileView"
        tools:layout="@layout/activity_profile"/>

    <fragment
        android:id="@+id/nav_notifications"
        android:name="com.dat257.team1.LFG.view.NotificationFragment"
        android:label="NotificationFragment" />
    <fragment
        android:id="@+id/nav_messages"
        android:name="com.dat257.team1.LFG.view.chatList.ChatListFragment"
        android:label="ChatListFragment" />
    <fragment
        android:id="@+id/nav_welcomeFragment"
        android:name="com.dat257.team1.LFG.view.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/nav_loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/nav_registerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_welcomeFragment_to_nav_act_feed"
            app:destination="@id/nav_act_feed"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_exit_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/nav_loginFragment"
        android:name="com.dat257.team1.LFG.view.loginPage.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/nav_registerFragment"
        android:name="com.dat257.team1.LFG.view.loginPage.RegisterFragment"
        android:label="RegisterFragment" />

</navigation>