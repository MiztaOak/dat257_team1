<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.dat257.team1.LFG.view.activityFeed.ActFeedPageFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/activity_feed">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.dat257.team1.LFG.view.loginPage.LoginFragment"
        android:label="@string/home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <action
            android:id="@+id/action_nav_home_second_to_nav_home"
            app:destination="@id/nav_home" />
        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/scrollingFragment"
        android:name="com.dat257.team1.LFG.ScrollingFragment"
        android:label="fragment_scrolling"
        tools:layout="@layout/fragment_scrolling" />
    <activity
        android:id="@+id/messageView"
        android:name="com.dat257.team1.LFG.view.MessageView"
        android:label="MessageView" />
    <activity
        android:id="@+id/profileView"
        android:name="com.dat257.team1.LFG.view.ProfileView"
        android:label="ProfileView" />
    <activity
        android:id="@+id/notificationView"
        android:name="com.dat257.team1.LFG.view.NotificationView"
        android:label="NotificationView" />
</navigation>