<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dat257.team1.LFG">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".service.Map" />
        <activity
            android:name="com.dat257.team1.LFG.view.ActivityDescription.ActivityDescriptionView"
            android:label="Activity Description" />
        <activity android:name=".view.CreateActivityView" />
        <activity
            android:name=".view.loginPage.LoginPageView"
            android:label="@string/login_page_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.ActivityFeedViewWTabs.ActivityFeedWTabsView" />
        <activity android:name=".view.ActivityFeedView" />
        <activity android:name=".view.NotificationView" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>